@inherits LayoutComponentBase

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/img/icons/dotnet_60x60.png" alt=".NET Conf" width="40" height="40">
            </a>
            <button class="navbar-toggler" type="button" @onclick="_ => { visible = true; }">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <NavMenu MenuMode="MenuMode.Horizontal"></NavMenu>
            </div>
            <Drawer Visible="@visible" Placement="top" OnClose="_ => {visible = false; }">
                <NavMenu MenuMode="MenuMode.Vertical"></NavMenu>
            </Drawer>
        </div>
    </nav>
</header>

@Body

<div class="container">
    <hr>

    <div class="row">
        <div class="col">
            <div class="text-center">
                @*Sponsors*@
                @foreach (var group in LocaleService.CurrentLocale.Sponsors.GroupBy(x => x.Level))
                {
                    <h3 class="sponsors-title">@LocaleService.CurrentLocale.Labels[group.Key]</h3>
                    @foreach (var sponsor in group)
                    {
                        <a href="@sponsor.Url" target="_blank" title="@sponsor.Name">
                            <img class="img-fluid sponsor" src="@sponsor.Logo" alt="@sponsor.Name" width="@sponsor.Width">
                        </a>
                    }
                }

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3 class="sponsors-title">@LocaleService.CurrentLocale.Labels["OurPartners"]</h3>
                @foreach (var partner in LocaleService.CurrentLocale.Partners ?? Array.Empty<Partner>())
                {
                    <a href="@partner.Url" target="_blank" title="@partner.Name">
                        <img class="img-fluid sponsor" src="@partner.Logo" alt="@partner.Name" width="@partner.Width">
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3 class="sponsors-title">@LocaleService.CurrentLocale.Labels["VenueSupports"]</h3>
                @foreach (var venueSupport in LocaleService.CurrentLocale.VenueSupports ?? Array.Empty<VenueSupport>())
                {
                    <a href="@venueSupport.Url" target="_blank" title="@venueSupport.Name">
                        <img class="img-fluid sponsor" src="@venueSupport.Logo" alt="@venueSupport.Name" width="@venueSupport.Width">
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3 class="sponsors-title">@LocaleService.CurrentLocale.Labels["BooksSponsors"]</h3>
                @foreach (var booksSponsor in LocaleService.CurrentLocale.BooksSponsors ?? Array.Empty<BooksSponsor>())
                {
                    <a href="@booksSponsor.Url" target="_blank" title="@booksSponsor.Name">
                        <img class="img-fluid sponsor" src="@booksSponsor.Logo" alt="@booksSponsor.Name" width="@booksSponsor.Width">
                    </a>
                }
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3 class="sponsors-title">@LocaleService.CurrentLocale.Labels["Communities"]</h3>
                @foreach (var community in LocaleService.CurrentLocale.Communities ?? Array.Empty<Community>())
                {
                    <a href="@community.Url" target="_blank" title="@community.Name">
                        <img class="img-fluid sponsor" src="@community.Logo" alt="@community.Name" width="@community.Width">
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3 class="bottom">.NET</h3>
                <h4>your platform for building anything</h4>
                <h4>
                    <a href="https://dot.net" target="_blank">www.dot.net</a>
                </h4>
            </div>
        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-auto">
                © 2020 <a href="https://dotnetfoundation.org" target="_blank">.NET Foundation</a>.
                <a href="https://dotnetfoundation.org/about/code-of-conduct" target="_blank">Code of Conduct</a> |
                <a href="https://dotnetfoundation.org/about/privacy-policy" target="_blank">Privacy Policy</a>
            </div>
            <div class="col-auto">
                This website is made with Blazor and ❤
            </div>
        </div>
    </div>
</footer>

